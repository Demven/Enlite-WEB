@require '../../../../../styles/base/util'

$componentName = 'SubscriptionForm'

.{$componentName}
  width: 100%
  position: relative

  &__title
    width: 100%
    font-family: $font-dincyr-regular
    font-size: 2em
    color: $color-marine

    .{$componentName}--success &
      display: none

    .{$componentName}--in-examination &
      color: $color-granate
      text-align: center

  &__input
    width: 100%
    height: 2.3em
    font-size: 1.6em
    font-family: $font-dincyr-regular
    background: rgba(0,0,0,0);
    margin-top: 2em
    padding-left: 0.4em
    color: $color-peach
    border: 2px solid $color-peach
    box-sizing: border-box

    &:focus
      outline-color: $color-peach

    .{$componentName}--success &
      display: none

    .{$componentName}--in-examination &
      text-align: center
      margin-top: 1em
      color: $color-dark
      border-color: tint($color-dark, 60%)

      &:focus
        outline-color: tint($color-dark, 60%)

  &__button
    width: 100%
    font-family: $font-dincyr-regular
    font-size: 1.6em;
    padding: 0.4em 0
    margin-top: 1.8em
    color: $color-dark
    background: #fff

    &:focus
      outline-color: $color-peach

    .{$componentName}--success &
      display: none

    .{$componentName}--in-examination &
      margin-top: 1em
      font-family: $font-dincyr-bold
      background: $color-granate
      color: $color-peach-light
      border-color: tint($color-granate, 50%)

  &__message
    width: 17.68em
    position: absolute
    top: 137px
    padding: 1em
    display: flex
    justify-content: center
    align-content: center
    font-family: $font-dincyr-regular
    font-size: 1.6em
    background: #fff
    color: $color-dark
    box-sizing: border-box
    text-align: center

    .{$componentName}--error &
      top: 12.8em
      color: $color-peach
      background: $color-granate

    .{$componentName}--success &
      top: 4em
      background: $color-peach

    .{$componentName}--in-examination &
      top: 100%
      left: -1.2em
      position: absolute
      padding: 1.4em 1.24em
      margin-top: 2.8em
      font-family: $font-dincyr-bold
      color: $color-granate
      background: white
      box-sizing: content-box

