@require '../../../../../styles/base/util'

$componentName = 'Examination'

.{$componentName}
  font-size: 1rem
  height: 64em
  display: flex
  justify-content: center
  align-items: center
  background: $color-peach-light

  &__screen-wrapper
    height: 42em
    width: 60em
    position: relative

  &__screen-title
    font-family: $font-dincyr-bold
    color: $color-granate
    font-size: 2.4em
    padding-bottom: 2em
    text-align: center

  &__button
    height: 6em
    width: 6em
    font-family: $font-dincyr-regular
    font-size: 2.6em
    line-height: 5.8em
    text-align: center
    color: $color-peach
    background: $color-granate
    border-radius: 50%
    margin: 2em auto 0

    &:hover
      background: lighten($color-granate, 20%)
      cursor: pointer


  &__start-screen
    .{$componentName}__corner
      width: 2em
      height: 2em
      position: absolute
      border-color: $color-dark

      &--tl
        top: 0
        left: 0
        border-top: 2px solid
        border-left: 2px solid

      &--tr
        top: 0
        right: 0
        border-top: 2px solid
        border-right: 2px solid

      &--bl
        bottom: 0
        left: 0
        border-bottom: 2px solid
        border-left: 2px solid

      &--br
        bottom: 0
        right: 0
        border-bottom: 2px solid
        border-right: 2px solid

    .{$componentName}__invite-text
      font-family: $font-dincyr-regular
      font-size: 4.2em
      color: $color-granate
      text-align: center
      margin-top: 0.6em
      padding: 0 1em


  &__reading-screen
    height: 100%
    overflow-y: scroll
  &__text-to-read
    font-family: $font-dincyr-regular
    font-size: 2em
    p
     padding-bottom: 0.5em
     text-indent: 1.5em

  &__testing-screen
    .{$componentName}__test
      color: black

  &__results-screen
    .{$componentName}__result
      color: black
