@require '../../../../../styles/base/util'

$componentName = 'Advantages'

.{$componentName}
  font-size: 1rem
  background: $color-peach
  display: flex
  flex-direction: column
  align-items: center
  padding: 5em 0

  &__title
    width: 20em
    font-family: $font-dincyr-regular
    font-size: 3.8em
    text-align: center
    color: $color-dark

  &__list
    width: 91.4em
    margin-top: 4em
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: space-between

    .{$componentName}__item
      width: 26em
      font-family: $font-dincyr-regular
      padding: 1.5em 0

    .{$componentName}__item-title
      padding-bottom: .8em
      color: $color-granate
      font-size: 2em
      font-weight: bold
      text-transform: uppercase

    .{$componentName}__item-text
      color: $color-dark
      font-size: 1.8em

@media $mobile
  .{$componentName}
    padding: 3em 0 0
    &__title
      width: 100%
      font-size: 2.2em
      text-align: left
      padding: 0 1em 0 1.34em
      box-sizing: border-box
    &__list
      width: 100%
      flex-direction: column
      align-items: center
      margin-top: 1em
      .{$componentName}__item
        width: 100%
        padding: 1.5em 3em
        box-sizing: border-box
      .{$componentName}__item-title
        font-size: 1.8em
      .{$componentName}__item-text
        font-size: 1.6em

@media $tablet
  .{$componentName}
    padding-bottom: 3em
    &__title
      width: 100%
      box-sizing: border-box
      font-size: 3em
      padding: 0 1em
    &__list
      width: 100%
      margin-top: 2em
      .{$componentName}__item
        width: 50%
        padding: 1.5em 6em
        box-sizing: border-box
