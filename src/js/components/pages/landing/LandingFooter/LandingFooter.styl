@require '../../../../../styles/base/util'

$componentName = 'LandingFooter'

.{$componentName}
  font-size: 1rem
  height: 13.2em
  background: #4a4d52
  display: flex
  justify-content: center
  align-items: center

  &__logo
    height: 81%
    margin-right: 62em
    margin-top: 1.5em

  &__feedback
    font-family: $font-dincyr-regular
    font-size: 1.8em
    color: #f3f3f3
    text-transform: uppercase
    margin-top: 0.4em
    transform: translateX(1.4em)

    &:hover
      text-decoration: underline
      cursor: pointer
