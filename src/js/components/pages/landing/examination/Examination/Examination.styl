@require '../../../../../../styles/base/util'

$componentName = 'Examination'

.{$componentName}
  height: 64em
  display: flex
  justify-content: center
  align-items: center
  font-size: 1rem
  position: relative
  background: $color-peach-light

  &__close
    width: 4em
    height: 4em
    position: absolute
    top: 4em
    right: 4em
    cursor: pointer

    &:before
      content: ''
      width: 0.4em
      height: 4em
      border-radius: 0.2em
      background: $color-gray
      position: absolute
      top: 0
      left: 1.8em
      transform: rotate(45deg)

    &:after
      content: ''
      width: 0.4em
      height: 4em
      border-radius: 0.2em
      background: $color-gray
      position: absolute
      top: 0
      left: 1.8em
      transform: rotate(-45deg)

  &__screen-wrapper
    height: 42em
    width: 60em
    position: relative
