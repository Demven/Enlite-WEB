@require '../../../../../../styles/base/util'

.ExaminationButton
  height: 6em
  width: 6em
  font-family: $font-dincyr-regular
  font-size: 2.6em
  line-height: 5.8em
  text-align: center
  color: $color-peach
  background: $color-granate
  border-radius: 50%
  margin: 2em auto 1em

  &:hover
    background: lighten($color-granate, 20%)
    cursor: pointer

@media $mobile
  .ExaminationButton
    font-size: 2em
