@require '../../../../../styles/base/util'

$componentName = 'People'

.{$componentName}
  font-size: 1rem
  height: 54.6em
  display: flex
  flex-direction: column
  align-items: center
  background: #fff
  position: relative

  &__static-container
    width: 100%
    height: 5em
    position: absolute
    top: 4.8em
    left: 0
    display: flex
    flex-direction: column
    align-items: center

    .{$componentName}__title
      width: 25em
      margin-left: 18.8em
      font-family: $font-dincyr-regular
      font-size: 4.4em

    .{$componentName}__switcher
      width: 110em
      height: 10.9em
      margin-top: 29.4em
      margin-left: 83em

      &-item
        width: 8.3em
        height: 10.9em
        float: left
        margin-right: 0.6em
        position: relative
        z-index: 10

        &:after
          content: ''
          width: 100%
          height: 100%
          position: absolute
          top: 0
          left: 0
          background: $color-dark
          opacity: 0.8

        &--chosen
          &:after
            display:none

        &:hover
          cursor: pointer
          &:after
            opacity: 0.6

      &-photo
        width: 8.3em
        height: 10.9em

  &__person-container
    width: 110em
    height: 54.6em
    position: relative
  &__person
    width: 110em
    height: 54.6em
    position: absolute
    left: 0
    top: 0
    opacity: 0
    display: none

    &--shown
      display: block

    &--visible
      opacity: 1

    &-photo
      width: 34.2em
      height: 44em
      position: absolute
      top: 5.5em
      left: 0
    &-name
      position: absolute
      top: 4em
      left: 13em
      font-family: $font-dincyr-bold
      font-size: 3.2em
      color: $color-granate
    &-text
      width: 35em
      height: 10em
      position: absolute
      top: 9em
      left: 20.7em
      font-family: $font-dincyr-regular
      font-size: 2em
      color: $color-dark

@media $mobile
  .{$componentName}
    height: auto
    &__static-container
      height: 100%
      top: 2em
      .{$componentName}__title
        width: 100%
        font-size: 2.4em
        margin-left: 2.6em
      .{$componentName}__switcher
        width: 54em
        font-size: .49em
        position: absolute
        bottom: 8.6em
        left: 6.5em
        margin: 0

    &__person-container
      width: 100%
      height: 100%

    &__person
      width: 100%
      height: 100%
      position: relative
      padding-top: 7em
      padding-bottom: 9.6em
      &-photo
        font-size: 0.6em
        position: static
        margin-left: 5.45em
      &-name
        font-size: 2.3em
        position: static
        margin-top: 1em
        margin-left: 1.4em
      &-text
        width: 100%
        height: auto
        position: static
        margin-top: 1em
        font-size: 1.6em
        box-sizing: border-box
        padding: 0 1.96em

@media $tablet-any
 .{$componentName}
   height: 52.6em
   &__static-container
     height: 100%
     top: 0
     .{$componentName}__title
       width: 100%
       font-size: 3.6em
       margin-left: 15.8em
       margin-top: 0.65em
     .{$componentName}__switcher
       width: 100%
       display: flex
       justify-content: center
       margin-left: 0
       position: absolute
       bottom: 3em
       left: 0

   &__person-container
     width: 100%

   &__person
     width: 100%
     &-photo
       width: 23em
       height: auto
       top: 3em
       left: 3em
     &-name
       font-size: 2.8em
       left: 10.25em
       top: 3.4em
     &-text
       width: 60%
       left: 16em
       top: 8.1em
       font-size: 1.8em


