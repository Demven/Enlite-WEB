@require '../../../../../styles/base/util'

$componentName = 'People'

.{$componentName}
  font-size: 1rem
  height: 54.6em
  display: flex
  flex-direction: column
  align-items: center
  background: #fff
  position: relative

  &__static-container
    width: 100%
    height: 5em
    position: absolute
    top: 4.8em
    left: 0
    display: flex
    flex-direction: column
    align-items: center

    .{$componentName}__title
      width: 25em
      margin-left: 18.8em
      font-family: $font-dincyr-regular
      font-size: 4.4em

    .{$componentName}__switcher
      width: 110em
      height: 10.9em
      margin-top: 29.4em
      margin-left: 83em

      &-item
        width: 8.3em
        height: 10.9em
        float: left
        margin-right: 0.6em
        position: relative
        z-index: 10

        &:after
          content: ''
          width: 100%
          height: 100%
          position: absolute
          top: 0
          left: 0
          background: $color-dark
          opacity: 0.8

        &--chosen
          &:after
            display:none

        &:hover
          cursor: pointer
          &:after
            opacity: 0.6

      &-photo
        width: 8.3em
        height: 10.9em

  &__person-container
    width: 110em
    height: 54.6em
    position: relative
  &__person
    width: 110em
    height: 54.6em
    position: absolute
    left: 0
    top: 0
    opacity: 0
    display: none

    &--shown
      display: block

    &--visible
      opacity: 1

    &-photo
      width: 34.2em
      height: 44em
      position: absolute
      top: 5.5em
      left: 0
    &-name
      position: absolute
      top: 4em
      left: 13em
      font-family: $font-dincyr-bold
      font-size: 3.2em
      color: $color-granate
    &-text
      width: 35em
      height: 10em
      position: absolute
      top: 9em
      left: 20.7em
      font-family: $font-dincyr-regular
      font-size: 2em
      color: $color-dark
