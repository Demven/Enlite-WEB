@require '../../../../../styles/base/util'
@require '../../../../../styles/base/devices'

$componentName = 'LandingHeader'

.{$componentName}
  height: 60em
  display: flex
  flex-direction: row
  flex-wrap: nowrap
  justify-content: center
  font-size: 1rem
  background-color: $color-peach
  position: relative

  &__bg
    width: 100%
    height: 51.5em
    position: absolute
    top: 0
    left: 0
    background-image: $image('bg/header-bg-mask.jpg')
    background-repeat: no-repeat
    background-size: cover
    background-position-y: 66%
    z-index: 0


  &__left-container
    display: flex
    flex-grow: 1
    flex-direction: column
    justify-content: flex-start
    z-index: 10
    position: relative

    .{$componentName}__logo
      width: 22.5em
      height: 15.2em
      position: absolute
      top: 1em
      right: 21em
      background-image: $image('ic/logo-shadow.png')
      background-size: 22.5em 15.2em

    .{$componentName}__description
      width: 11em
      position: absolute
      top: 7.4em
      right: 5.1em
      font-family: $font-dincyr-regular
      font-size: 1.8em
      text-transform: uppercase
      color: $color-peach

    .{$componentName}__features
      width: 11em
      height: 11em
      position: absolute
      right: 3.5em
      top: 11.5em
      font-family: $font-dincyr-regular
      font-size: 2.0em
      display: flex
      flex-direction: column
      justify-content: space-between
      color: $color-marine

  &__center-container
    display: flex
    flex-grow: 0
    flex-direction: column
    justify-content: flex-end
    z-index: 10

    .{$componentName}__mobile-screen
      width: 22.1em
      height: 46.2em
      background-image: $image('bg/iphone.png')
      background-size: 100% 100%


  &__right-container
    display: flex
    flex-grow: 1
    position: relative

    .{$componentName}__form
      width: 70%
      max-width: 29em
      position: absolute
      top: 18.8em
      left: 9.6em

    .{$componentName}__scroller
      position: absolute
      bottom: 1em
      left: 21em
      display: flex
      flex-direction: row
      align-items: center
      cursor: pointer

      &:hover
        .{$componentName}__icon
          background: lighten($color-granate, 20%)
        .{$componentName}__title
          color: $color-gray

      .{$componentName}__icon
        width: 4.5em
        height: 4.5em
        border-radius: 50%
        background: $color-granate

        &:before
          content: ''
          width: 2.2em
          height: 0.5em
          position: absolute
          top: 2.2em
          left: 0.6em
          transform: rotate(45deg)
          background: $color-peach
          border-radius: 20%

        &:after
          content: ''
          width: 2.2em
          height: 0.5em
          position: absolute
          top: 2.2em
          left: 1.8em
          transform: rotate(-45deg)
          background: $color-peach
          border-radius: 20%

      .{$componentName}__title
        width: 8em
        margin-left: 0.8em
        font-family: $font-dincyr-regular
        font-size: 1.6em
        color: $color-dark

@media $mobile
  .{$componentName}
    height: auto
    flex-direction: column
    &__bg
      background-position-x: 50%
      height: 60em
    &__left-container
      height: 60em
      .{$componentName}__logo
        font-size: 0.8em
        right: initial
        left: 2em
      .{$componentName}__description
        font-size: 1.4em
        right: initial
        left: 9.3em
        top: 6em
      .{$componentName}__features
        width: 13em
        height: 6em
        font-size: 1.4em
        right: initial
        left: 9.3em
        top: 10em
    &__center-container
      order: 3
      margin-top: -6em
      align-items: center
    &__right-container
      width: 100%
      position: absolute
      left: 0
      top: 9em
      .{$componentName}__form
        font-size: 0.78em
        top: 25em
        left: 20%
        z-index: 15
      .{$componentName}__scroller
        height: 4.5em
        left: 14.2em
        top: 45em
        font-size: 0.8em
        z-index: 10
        &:hover
          .{$componentName}__title
            color: $color-peach
        .{$componentName}__title
          color: $color-peach



@media $tablet
  .{$componentName}
    font-size: 0.85rem
    &__left-container
      .{$componentName}__logo
        right: initial
        left: 4.2em
      .{$componentName}__description
        right: initial
        left: 3em
        top: 9em
      .{$componentName}__features
        top: 12em
        right: initial
        left: 2.65em

    &__right-container
      .{$componentName}__form
        left: 15%
      .{$componentName}__scroller
        left: 24%

@media $tablet-wide
  .{$componentName}
    font-size: 0.85rem
    &__right-container
      .{$componentName}__scroller
        left: 34%
