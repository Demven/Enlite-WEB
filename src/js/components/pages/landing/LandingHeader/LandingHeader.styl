@require '../../../../../styles/base/util'

$componentName = 'LandingHeader'

.{$componentName}
  height: 60em
  display: flex
  flex-direction: row
  flex-wrap: nowrap
  justify-content: center
  font-size: 1rem
  background-color: $color-peach


  &__bg
    width: 100%
    height: 51.5em
    position: absolute
    top: 0
    left: 0
    background-image: $image('bg/header-bg-mask.jpg')
    z-index: 0


  &__left-container
    display: flex
    flex-grow: 1
    flex-direction: column
    justify-content: flex-start
    z-index: 10

    .{$componentName}__logo
      width: 22.5em
      height: 15.2em
      position: absolute
      top: 3em
      left: 6em
      background-image: $image('ic/logo-shadow.png')
      background-size: 22.5em 15.2em

    .{$componentName}__description
      width: 11em
      position: absolute
      top: 7.4em
      left: 11.4em
      font-family: $font-dincyr-regular
      font-size: 1.8em
      text-transform: uppercase
      color: $color-peach

    .{$componentName}__features
      width: 11em
      height: 11em
      position: absolute
      left: 10.3em
      top: 11.5em
      font-family: $font-dincyr-regular
      font-size: 2.0em
      display: flex
      flex-direction: column
      justify-content: space-between
      color: $color-marine

  &__center-container
    display: flex
    flex-grow: 0
    flex-direction: column
    justify-content: flex-end
    z-index: 10

    .{$componentName}__mobile-screen
      width: 22.1em
      height: 46.2em
      background-image: $image('bg/mobile-screen.png')


  &__right-container
    display: flex
    flex-grow: 1
    position: relative

    .{$componentName}__form-container
      width: 38em
      height: 20em
      position: absolute
      top: 18.8em
      left: 9.6em

    .{$componentName}__form-title
      font-family: $font-dincyr-regular
      font-size: 2em
      color: $color-marine

    .{$componentName}__form-input
      width: 17em
      height: 1.9em
      font-size: 1.6em
      font-family: $font-dincyr-regular
      background: rgba(0,0,0,0);
      margin-top: 2em
      padding-left: 0.4em
      color: $color-peach
      border: 2px solid $color-peach

      &:focus
        outline-color: $color-peach

    .{$componentName}__form-button
      width: 17.7em
      font-family: $font-dincyr-regular
      font-size: 1.6em;
      padding: 0.4em 0
      margin-top: 1.8em
      color: #121c26

      &:focus
        outline-color: $color-peach
