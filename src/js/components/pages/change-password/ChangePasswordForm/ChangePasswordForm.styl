@require '../../../../../styles/base/util'

$componentName = 'ChangePasswordForm'

.{$componentName}
  width: 35em
  position: relative

  &__input
    width: 100%
    height: 2.3em
    font-size: 1.6em
    font-family: $font-dincyr-regular
    background: #fff;
    margin-top: 2em
    padding-left: 0.4em
    color: $color-dark
    border: 2px solid rgba(0,0,0,0.3)
    box-sizing: border-box

    &:focus
      outline: 0
      border-color: rgba(0,0,0,0.5)

    .{$componentName}--success &
      display: none

  &__button
    width: 100%
    font-family: $font-dincyr-regular
    font-size: 1.6em;
    padding: 0.4em 0
    margin-top: 1.8em
    color: $color-peach
    background: $color-gray
    border-color: $color-peach

    &:focus
      outline-color: $color-peach

    .{$componentName}--success &
      display: none

  &__message
    width: 21.7em
    padding: 1em
    margin-left: 0.1em
    margin-top: 1.7em
    display: flex
    justify-content: center
    align-content: center
    font-family: $font-dincyr-regular
    font-size: 1.6em
    background: #fff
    color: $color-dark
    box-sizing: border-box
    text-align: center

    .{$componentName}--error &
      color: $color-peach
      background: $color-granate

    .{$componentName}--success &
      background: #fff
      margin: 5em 0 3em

@media $mobile
  .{$componentName}
    width: 28em
    &__message
      width: 100%
      .{$componentName}--success &
        top: 2em
