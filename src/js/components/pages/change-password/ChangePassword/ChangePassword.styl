@require '../../../../../styles/base/util'
@require '../../../../../styles/base/devices'

$componentName = 'ChangePassword'

.{$componentName}
  min-height: 100vh
  display: flex
  flex-direction: column
  justify-content: flex-start
  align-items: center
  font-size: 1rem
  font-family: $font-dincyr-regular
  background: $color-peach

  &__header
    width: 100%
    text-align: center
    background: $color-dark-gray

  &__logo
    height: 15em
    padding: 5em

  &__title
    font-size: 2.6em
    margin: 1.5em 0 0.5em

  &__link-back
    margin: 1.6em 0 0.8em
    font-size: 2.6em
    color: $color-granate

@media $mobile
  .{$componentName}
    &__logo
      height: 12em
    &__link-back
      margin-bottom: 1.4em
      font-size: 2em
